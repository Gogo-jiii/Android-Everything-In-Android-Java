<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerview_nav_graph"
    app:startDestination="@id/recyclerviewFragment">

    <fragment
        android:id="@+id/recyclerviewFragment"
        android:name="com.example.recyclerview.RecyclerviewFragment"
        android:label="Recyclerview"
        tools:layout="@layout/fragment_recyclerview" >
        <action
            android:id="@+id/action_recyclerviewFragment_to_simpleRecyclerviewFragment"
            app:destination="@id/simpleRecyclerviewFragment" />
        <action
            android:id="@+id/action_recyclerviewFragment_to_recyclerviewAnimationFragment"
            app:destination="@id/recyclerviewAnimationFragment" />
        <action
            android:id="@+id/action_recyclerviewFragment_to_singleSelectionRecyclerviewFragment"
            app:destination="@id/singleSelectionRecyclerviewFragment" />
        <action
            android:id="@+id/action_recyclerviewFragment_to_multipleItemsSelectionRecyclerviewFragment"
            app:destination="@id/multipleItemsSelectionRecyclerviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/simpleRecyclerviewFragment"
        android:name="com.example.recyclerview.fragments.SimpleRecyclerviewFragment"
        android:label="Simple Recyclerview"
        tools:layout="@layout/fragment_simple_recyclerview" />
    <fragment
        android:id="@+id/recyclerviewAnimationFragment"
        android:name="com.example.recyclerview.fragments.RecyclerviewAnimationFragment"
        android:label="Recyclerview Animation"
        tools:layout="@layout/fragment_recyclerview_animation" />
    <fragment
        android:id="@+id/singleSelectionRecyclerviewFragment"
        android:name="com.example.recyclerview.fragments.SingleItemSelectionRecyclerviewFragment"
        android:label="Recyclerview Single Item Selection"
        tools:layout="@layout/fragment_single_selection_recyclerview" />
    <fragment
        android:id="@+id/multipleItemsSelectionRecyclerviewFragment"
        android:name="com.example.recyclerview.fragments.MultipleItemsSelectionRecyclerviewFragment"
        android:label="Recyclerview Multiple Items Selection"
        tools:layout="@layout/fragment_multiple_items_selection_recyclerview" />
</navigation>